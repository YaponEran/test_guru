<%= page_header(t('.header')) %>

<div class="row justify-content-center">
  <div class="col-md-6">
  <%= form_with url: contact_path, local: true do |form| %>
    <div class="form-group">
      <%= form.text_field :email,
                          class: "form-control form-control-sm",
                          placeholder: t('.email'),
                          value: @user.email %>
    </div>
    <div class="form-group">
      <%= form.text_area :message, class: "form-control form-control-sm", rows: 6 %>
    </div>
    <div class="text-center">
    <%= form.submit t('.send'), class: "btn light-button btn-sm" %>
    </div>
  <% end %>
  </div>
</div>

