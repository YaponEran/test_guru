<div class="col-md-6">
  <%= form_with(model: [:admin, @test, @question], local: true) do |form| %>
    <%= render 'shared/errors', resource: @question %>

    <div class="form-group">
      <%= form.label :body, t('.question'), class: "small" %><br>
      <%= form.text_area :body, rows: "10", class: "form-control form-control-sm"%>
    </div>

    <div class="form-group">
      <%= form.label :level, t('.level'), class: "small" %><br>
      <%= form.number_field :level, in: 0..100, class: "form-control form-control-sm" %>
    </div>

    <div class="form-group text-center mt-5">
      <%= form.submit class: "btn light-button" %>
    </div>
    <div class="form-group text-center">
      <%= link_to t('.back'), admin_test_path(@question.test), class: "small" %>
    </div>
  <% end %>
</div>
