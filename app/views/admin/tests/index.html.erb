<%= page_header(t('.header')) %>
<%= render 'shared/errors', resource: @test %>

<div class="row">
<div class="col-md-12">
<table class="table table-hover table-bordered small edit-inline">
  <thead>
  <tr class="text-center">
    <th>
      <%= sort_buttons(title: tag.b(t('.category')),
                       sort_by: 'category',
                       sort_element_type: 'alpha',
                       hidden: :desc) %>
    </th>
    <th>
      <%= sort_buttons(title: tag.b(t('.title')),
                       sort_by: 'title',
                       sort_element_type: 'alpha',
                       hidden: :desc) %>
    </th>
    <th>
      <%= sort_buttons(title: tag.b(t('.level')),
                       sort_by: 'level',
                       sort_element_type: 'numeric',
                       hidden: :desc) %>
    </th>
    <th>
      <%= sort_buttons(title: tag.b(t('.quantity_of_questions')),
                       sort_by: 'questions-count',
                       sort_element_type: 'numeric',
                       hidden: :desc) %>
    </th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>
  </thead>
  <tbody id="test-admin-table-container">
  <%= render @tests %>
  </tbody>
</table>
<%= link_to  t('.new_test'), new_admin_test_path, class: "btn light-button" %>
</div>
</div>
