<%= page_header(t('.header')) %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover small">
      <thead>
        <tr class="text-center">
          <th><%= t('.is_active') %></th>
          <th><%= t('.image') %></th>
          <th><%= t('.title') %></th>
          <th><%= t('.description') %></th>
          <th><%= t('.rule') %></th>
          <th colspan="2"><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @badges %>
      </tbody>
    </table>
    <%= link_to t('.new_badge'), new_admin_badge_path, class: 'btn light-button' %>
  </div>
</div>
