<div class="dropdown sort-panel mb-4">
  <button class="btn btn-outline-secondary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="false" aria-expanded="false">
    <small><%= t('.sort') %></small>
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <%= sort_buttons(title: t('.sort_title_asc'),
                     sort_by: 'title',
                     sort_element_type: 'alpha',
                     hidden: 'desc') %>
    <%= sort_buttons(title: t('.sort_level_asc'),
                     sort_by: 'level',
                     sort_element_type: 'numeric',
                     hidden: 'desc') %>
    <%= sort_buttons(title: t('.sort_popularity_asc'),
                     sort_by: 'level',
                     sort_element_type: 'numeric',
                     hidden: 'desc') %>
  </div>
</div>
