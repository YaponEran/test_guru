<%= form_with url: sessions_path, local: true do |form| %>
  <% if flash[:alert] %>
    <%= content_tag :p, flash[:alert], class: 'flash alert' %>
  <% end %>

  <p>
    <%= form.label :email, 'Эл.почта' %>
    <%= form.text_field :email, id: :email %>
  </p>

  <p>
    <%= form.label :password, 'пароль' %>
    <%= form.text_field :password, id: :password %>
  </p>

  <p><%= form.submit 'Войти' %></p>
<% end %>
