    <div class="card-body">
      <h5 class="card-title"><%= t('.statistics').upcase %></h5>
      <p class="card-text"><%= t('.compare_your_results') %></p>
    </div>
  </div>

  <div class="card">
    <div class="text-white bg-cyan6 p-5">
     <i class="fa fa-5x fa-child" aria-hidden="true"></i>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= t('.self_assessment').upcase %></h5>
      <p class="card-text"><%= t('.how_guru_are_you') %></p>
